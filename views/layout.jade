doctype
html(ng-app="nobotApp")
  head
    meta(charset='utf8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    base(href='/')
    title Nobot.email

    //- open graph
    meta(property="og:site_name", content="Nobot.email")
    meta(property="og:title", content="Share your email safely.")
    meta(property="og:description", content="Share your email without worrying about bots.")

    //- twitter
    meta(property="twitter:card", content="summary_large_image")
    meta(property="twitter:title", content="Share your email safely.")
    meta(property="twitter:description", content="Share your email without worrying about bots.")

    //- loading bootstrap
    link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.2.0/css/bootstrap.min.css')

    //- loading font awesome!
    link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.2.0/css/font-awesome.min.css')

    //- loading custom stylesheets
    link(rel='stylesheet', href='/css/nobotApp.css')
    link(rel='stylesheet', href='/css/flat-ui.css')
    link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/nprogress/0.1.3/nprogress.min.css')
  body
    block body
